@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ListRoles";
}

<h1>List Roles</h1>

@if (Model.Any())
{
    foreach (var role in Model)
    {
<div class="card mb-3">
    <div class="card-header">
        Role Id: @role.Id
    </div>
    <div class="card-body">
        <h5 class="card-title">@role.Name</h5>
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" asp-controller="Admin" asp-action="EditRole" asp-route-id="@role.Id">Edit</a>
        <a class="btn btn-danger" asp-controller="Admin" asp-action="DeleteRole">Delete</a>
    </div>
</div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Roles created yet
        </div>
        <div class="card-body">
            <h4 class="card-title">
                Use the button below to create a role
            </h4>
            <a class="btn btn-primary" asp-controller="Admin" asp-action="CreateRole">Create Role</a>
        </div>
    </div>
}
